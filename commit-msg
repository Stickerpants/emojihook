#!/bin/bash
#
# This hook was generated by emojihook. You shouldn't edit this,
# but feel free to submit a PR if you want to make this better!
#
# https://github.com/Stickerpants/emojihook

TEXT="$(cat $1)"

ARR=("🔥" "🔶" "📙")
ARR_SIZE=${#ARR[@]}
RAND_IDX=$(($RANDOM % $ARR_SIZE))
RAND_ELEM=${ARR[$RAND_IDX]}
TEXT=$(echo "$TEXT" | sed -e "s/:spicy:/$RAND_ELEM/g")

ARR=("👌" "🆗✋")
ARR_SIZE=${#ARR[@]}
RAND_IDX=$(($RANDOM % $ARR_SIZE))
RAND_ELEM=${ARR[$RAND_IDX]}
TEXT=$(echo "$TEXT" | sed -e "s/:ok:/$RAND_ELEM/g")

echo "$TEXT" | sed \
	-e 's/:trash:/🗑/g' \
	-e 's/:bdb:/🍆/g' \
	-e 's/:thinking:/🤔/g' \
	-e 's/:gun:/🔫/g' \
	-e 's/:brain:/🧠/g' \
	-e 's/:zoop:/👉😎👉/g' \
	-e 's/:sus:/🤨/g' \
	-e 's/:no:/🚫/g' \
	-e 's/:x:/❌/g' \
	-e 's/:warning:/⚠️/g' \
	-e 's/:checkbox:/✅/g' \
	-e 's/:checkmark:/✔️/g' \
	-e 's/:bug:/🐛/g' \
	> "$1"
